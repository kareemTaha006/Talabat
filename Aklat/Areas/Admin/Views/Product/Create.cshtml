@model Aklat.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    SelectList CatList;
    if (Model != null)
    {
        CatList = new SelectList(ViewBag.cat, "ID", "Name");

    }
    else
    {
        CatList = new SelectList(ViewBag.cat, "ID", "Name");

    }
}


<hr />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Add New Product</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" asp-controller="Product" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Product Name</label>
                                <input type="text" asp-for="Name"
                                       class="form-control"
                                       required="required"
                                       placeholder=" Enter Product Name">
                                <span asp-validation-for="Name" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Category Name</label>
                                <select type="text" asp-for="CategoryId"
                                        class="form-control" asp-items="CatList">
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Descreption</label>
                                <input type="text" asp-for="Description"
                                       class="form-control"
                                       placeholder=" Enter Descreption">
                                <span asp-validation-for="Description" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Stock" class="control-label"></label>
                                <input asp-for="Stock" class="form-control"
                                       placeholder=" Enter Stock Number">
                                
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                                </label>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Price</label>
                                <input type="text" asp-for="Price"
                                       class="form-control"
                                       placeholder=" Enter Price ">
                                <span asp-validation-for="Price" class="text-danger"></span>

                            </div>
                          
                            <div class="form-group">
                                <label for="exampleInputFile">Product Photo </label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input id="file" type="file" name="file" asp-for="File" 
                                               class="custom-file-input" />
                                        <label class="custom-file-label" for="exampleInputFile">Choose Image</label>
                                    </div>
                                    <div class="input-group-append">
                                        <span class="input-group-text">Upload</span>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
                <!-- general form elements -->


            </div>
            <!--/.col (left) -->

            <div class="col-md-6 d-flex justify-content-center pt-5 overflow-hidden ">
                <img src="" class="cover-preview d-none  " alt="Cover" style="max-height:500px" />

            </div>

        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
