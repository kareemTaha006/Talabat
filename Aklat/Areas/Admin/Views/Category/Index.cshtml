@model IEnumerable<Aklat.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Categories View </h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <a  asp-action="Create" asp-controller="Category" asp-area="Admin"
                           class="btn btn-success">Add New Category </a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                     
                            <th>Category Name</th>
                            <th>Type</th>
                            <th>Image</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <th>@item.Type</th>
                                <td> <img src="@($"{GeneralVariables.ImgCategoryPath}/{item.ImageUrl}")" style="width:150px; height:150px;"></td>


      
                                <td>
                                    <a asp-action="EditView" asp-controller="Category" asp-route-Id="@item.ID" class="btn btn-primary">Edit Category</a>

                                    <a asp-action="Delete" asp-controller="Category" asp-route-Id="@item.ID" class="btn btn-danger">Delete Category</a>
                                </td>
                            </tr>

                        }


                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>